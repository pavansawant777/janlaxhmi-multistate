<br><br>
<form action="/admin/save_daily_deposit_scheme_details" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12 text-center">
                <h3>Add Daily Deposit Schemes Details</h3>
            </div>
    
            <div class="mb-3 col-12">
                Enter Duration 
                <input type="text" name="daily_deposit_duration" class="form-control">
            </div>

            <div class="mb-3 col-12">
                Enter Intrest Rate 
                <input type="text" name="daily_deposit_intrest" class="form-control">
            </div>
    
            <div class="mb-3 col-12 text-center">
                <button class="btn btn-primary">Save Details</button>
            </div>
        </div>
    </div>
    </form>


    
    <br><br>
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Daily Deposit Scheme Duration And Intrest Rate</h3>
                <br>
            </div>
            <div class="col-md-12">
            <div class="table-wrapper" style="overflow-x: auto; -webkit-overflow-scrolling: touch;">

                <table class="table table-sm table-bordered">
                    <tr>
                        <th>Action</th>
                        <th>SN</th>
                        <th>Duration</th>
                        <th>Intrest Rate</th>

                    </tr>
                    <% for(i=0;i<daily_deposit_details.length;i++) { %>
    
                        <tr>
                            <td style="white-space: nowrap;">
                                <button class="btn btn-danger" onclick="confirmDelete('<%- daily_deposit_details[i].daily_deposit_scheme_id %>')" aria-label="Delete enquiry">
                                    <i class="fa fa-trash"></i>
                                </button>
                                <!-- <a href="/admin/delete_daily_deposit_details/<%- daily_deposit_details[i].daily_deposit_scheme_id %>">
                                    <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                </a>   -->
                            </td>
                            <td><%-i+1%></td>
                            <td><%-daily_deposit_details[i].daily_deposit_duration%></td>
                            <td><%-daily_deposit_details[i].daily_deposit_intrest%></td>
                            
                        </tr>
                    <% } %>
                </table>
                <script>
                    function confirmDelete(enquiryId) {
                        // Display a confirmation dialog
                        var result = confirm("Are you sure you want to delete ?");
                        
                        if (result) {
                            // If the user clicks "OK", redirect to the delete URL
                            window.location.href = '/admin/delete_daily_deposit_details/' + enquiryId;
                        } else {
                            // If the user clicks "Cancel", do nothing (dialog closes)
                            return false;
                        }
                    }
                </script>
            </div>
            </div>
        </div>
    </div>

