<%- include('navbar.ejs') %>





<div id="content" class="container-fluid bg-white p-4">
    <div class="row">
        
        <div class="col-md-12">
            <h3 style="text-align: center;"><a style="float: left;" href="current_deposite_enquiry"><button class="btn btn-dark btn-sm">Back</button></a>Completed Current Deposit Enquiries</h3>
            <br>
        </div>
        <div class="col-md-12">
            <div class="table-wrapper" style="overflow-x: auto; -webkit-overflow-scrolling: touch;">

            <table class="table table-sm table-bordered">
                <tr>
                    <th>Action</th>
                    <th>SN</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                    <th>City</th>
                    <th>Message</th>

                </tr>
                <% for(i=0;i<current_deposit_enquiry.length;i++) { %>

                    <tr>
                        <td class="text-center ">
                            <button class="btn btn-danger" onclick="confirmDelete('<%- current_deposit_enquiry[i].current_deposit_enquiry_id %>')" aria-label="Delete enquiry">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>

                        <!-- <td style="white-space: nowrap;">
                            <a href="/admin/delete_current_deposit_enquiry/<%- current_deposit_enquiry[i].current_deposit_enquiry_id %>">
                                <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                            </a>  
                        </td> -->
                        <td><%-i+1%></td>
                        <td><%-current_deposit_enquiry[i].current_enquiry_name%></td>
                        <td><%-current_deposit_enquiry[i].current_enquiry_email%></td>
                        <td><%-current_deposit_enquiry[i].current_enquiry_mobile%></td>
                        <td><%-current_deposit_enquiry[i].current_enquiry_city%></td>
                        <td><%-current_deposit_enquiry[i].current_enquiry_message%></td>

                    </tr>
                <% } %>
            </table>
            <script>
                function confirmDelete(enquiryId) {
                    // Display a confirmation dialog
                    var result = confirm("Are you sure you want to delete this enquiry?");
                    
                    if (result) {
                        // If the user clicks "OK", redirect to the delete URL
                        window.location.href = '/admin/delete_current_deposit_enquiry/' + enquiryId;
                    } else {
                        // If the user clicks "Cancel", do nothing (dialog closes)
                        return false;
                    }
                }
            </script>
            </div>
            <div class="col-md-12 mt-5">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                       
                        <% for(var i=1; i<=total_pages; i++) { %>
    
                            <li class="page-item">
                                <a class="page-link" href="/admin/completed_deposit_enquiry?page_no=<%=i%>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>
    
                                
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


<%- include('footer.ejs') %>

