<%- include("navbar.ejs") %>


<form action="/admin/save_home_our_service" enctype="multipart/form-data" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12 text-center">
                <h3>Add Service</h3>
            </div> 
            <div class="mb-3 col-md-6">
                Chose Service Images
                <input type="file" name="home_service_image" value="" required  class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                Enter Image Heading
                <input type="text" name="service_image_heading" value="" required  class="form-control">
            </div>
            <div class="mb-3 col-md-12 ml-5">
                <button class="btn btn-primary">Save Service</button>
            </div>
        </div>
    </div>
</form><hr>




<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="mb-3 col-md-12 text-center">
          <h3>Service Images And Heading List</h3>
        </div>
        <div class="mb-3 col-md-12"> 
        <div class="table-wrapper" style="overflow-x: auto; -webkit-overflow-scrolling: touch;">

            <table class="table table-bordered table-stripped table-hover">
            <tr>
                <th style="width: 15%;" >Action</th>
                <th>Sr</th>
                <th>Image Title</th>
                <th>Images</th>
            </tr>
            <% for(var i=0;i<home_service_img.length;i++) { %>
                <tr>
                    <td>
                        <button class="btn btn-primary" onclick="confirmEdit('<%-home_service_img[i].home_our_service_id%>')" aria-label="Delete enquiry">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button class="btn btn-danger" onclick="confirmDelete('<%-home_service_img[i].home_our_service_id%>')" aria-label="Delete enquiry">
                            <i class="fa fa-trash"></i>
                        </button>
                        <!-- <a href="edit_home_service/<%-home_service_img[i].home_our_service_id%>" >
                            <button class="btn btn-primary" onclick="alert('Are You Sure....?')">
                                <i class="fa fa-edit"></i>
                            </button>
                        </a>
                        <a href="delete_home_service/<%-home_service_img[i].home_our_service_id%>" >
                            <button class="btn btn-danger" onclick="alert('Are You Sure....?')">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a> -->
                    </td>
                    <td><%- i+1 %></td>
                    <td><%-home_service_img[i].service_image_heading%></td>
                    <td>
                        <img src="/uploads/<%-home_service_img[i].home_service_image%>" style="height: 100px;width: 200px;">
                    </td>

                </tr>
            <% } %>
            
            </table>
            
            <script>
                function confirmDelete(enquiryId) {
                    // Display a confirmation dialog
                    var result = confirm("Are you sure you want to delete ?");
                    
                    if (result) {
                        // If the user clicks "OK", redirect to the delete URL
                        window.location.href = 'delete_home_service/' + enquiryId;
                    } else {
                        // If the user clicks "Cancel", do nothing (dialog closes)
                        return false;
                    }
                }
                function confirmEdit(enquiryId) {
                    // Display a confirmation dialog
                    var result = confirm("Are you sure you want to edit ?");
                    
                    if (result) {
                        // If the user clicks "OK", redirect to the delete URL
                        window.location.href = 'edit_home_service/' + enquiryId;
                    } else {
                        // If the user clicks "Cancel", do nothing (dialog closes)
                        return false;
                    }
                }
            </script>
        </div>
        </div>
    </div>
</div>








