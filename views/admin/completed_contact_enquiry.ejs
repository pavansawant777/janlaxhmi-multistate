<%- include('navbar.ejs') %>



<div id="content" class="container-fluid bg-white p-4">
    <div class="row">
        
        <div class="mb-3 col-md-12 text-center">
            <h3><a style="float: left;" href="contact_enquiry"><button class="btn btn-dark btn-sm">Back</button></a>Completed Contact Enquiries</h3>
        </div>
        <div class="mb-3 col-md-12">
            <div class="table-wrapper" style="overflow-x: auto; -webkit-overflow-scrolling: touch;">

            <table class="table table-sm table-bordered" >
                <tr>
                    <th>Action</th>
                    <th>Sr.no</th>
                    <th>Enquirer Name</th>
                    <th>Enquirer Email</th>
                    <th>Enquirer Mobile No</th>
                    <th>Enquirer Subject</th>
                    <th>Enquirer Message</th>

                </tr>
                <% for(var i=0; i<contact_enquiry.length; i++) {%>
                <tr>
                    <td class="text-center ">
                        <button class="btn btn-danger" onclick="confirmDelete('<%=contact_enquiry[i].contact_enq_id%>')" aria-label="Delete enquiry">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                    
                    <!-- <td>
                        <a href="/admin/delete_contact_enquiry_details/<%=contact_enquiry[i].contact_enq_id%>" title="Delete Enquiry Type">
                            <button class="btn btn-sm btn-danger" onclick="alert('Are You Sure...?')">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td> -->
                    <td><%= 1+i %></td>
                    <td><%= contact_enquiry[i].contact_enq_name %></td>
                    <td><%= contact_enquiry[i].contact_enq_email %></td>
                    <td><%= contact_enquiry[i].contact_enq_mobile %></td>
                    <td><%= contact_enquiry[i].contact_enq_subject %></td>
                    <td><%= contact_enquiry[i].contact_enq_message %></td>
                </tr>
                <% } %>
            </table>
            <script>
                function confirmDelete(enquiryId) {
                    // Display a confirmation dialog
                    var result = confirm("Are you sure you want to delete this enquiry?");
                    
                    if (result) {
                        // If the user clicks "OK", redirect to the delete URL
                        window.location.href = '/admin/delete_contact_enquiry_details/' + enquiryId;
                    } else {
                        // If the user clicks "Cancel", do nothing (dialog closes)
                        return false;
                    }
                }
            </script>
            </div>
        </div>
        <div class="col-md-12 mt-5">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    
                    <% for(var i=1; i<=total_pages; i++) { %>

                        <li class="page-item">
                            <a class="page-link" href="/admin/completed_contact_enquiry?page_no=<%=i%>">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>

                            
                </ul>
            </nav>
        </div>
    </div>
</div>



<%- include('footer.ejs') %>
