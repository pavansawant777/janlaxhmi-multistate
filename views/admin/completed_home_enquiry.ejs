<%- include("navbar.ejs") %>

<div id="content" class="container-fluid bg-white p-4">
   
    <div class="row">
        <div class="mb-3 col-md-12 text-center">
            <h3><a style="float: left;" href="/admin/enquiry"><button class="btn btn-dark btn-sm">Back</button></a>Complete Home Page Enquiries</h3>
        </div>
        <div class="mb-3 col-md-12"> 
            <!-- Custom table wrapper for overflow -->
            <div class="table-wrapper" style="overflow-x: auto; -webkit-overflow-scrolling: touch;">
                <table class="table table-bordered table-stripped table-hover">
                    <tr>
                        <th>Action</th>
                        <th>Sr</th>
                        <th>Enquiry Type</th>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Time</th>
                    </tr>
                    <% for(var i=0;i<co_enquiry.length;i++) { %>
                        <tr>
                            <td class="text-center ">
                                <button class="btn btn-danger" onclick="confirmDelete('<%-co_enquiry[i].enquiry_id%>')" aria-label="Delete enquiry">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </td>
                            <td><%-i+1%></td>
                            <td><%- co_enquiry[i].enquiry_type%></td>
                            <td><%- co_enquiry[i].name_of_enquired%></td>
                            <td><%- co_enquiry[i].mobile_of_enquired%></td>
                            <td><%- co_enquiry[i].email_of_enquired%></td>
                            <td>
                                <%- co_enquiry[i].currentdate%><br>
                            </td>
                            <td><%- co_enquiry[i].currenttime%></td>
                        </tr>
                    <% } %>
                    <!-- JavaScript for Confirm Delete -->
<script>
    function confirmDelete(enquiryId) {
        // Display a confirmation dialog
        var result = confirm("Are you sure you want to delete this enquiry?");
        
        if (result) {
            // If the user clicks "OK", redirect to the delete URL
            window.location.href = '/admin/completed_enquiry_delete/' + enquiryId;
        } else {
            // If the user clicks "Cancel", do nothing (dialog closes)
            return false;
        }
    }
</script>
                </table>
            </div>

            <div class="col-md-12 mt-5">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        
                        <% for(var i=1; i<=total_pages; i++) { %>
    
                            <li class="page-item">
                                <a class="page-link" href="/admin/completed_home_enquiry?page_no=<%=i%>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>
    
                                
                    </ul>
                </nav>
            </div>


        </div>
    </div>
</div>





<%- include("footer.ejs") %>
