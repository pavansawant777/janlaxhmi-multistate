<%- include("navbar.ejs") %>

<form action="/admin/save_top_slider" enctype="multipart/form-data" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12 text-center">
                <h3>Add Top Slider Images</h3>
            </div>
            <div class="mb-3 col-md-6">
                Chose Slider Images
                <input type="file" name="slider_image" value="" required  class="form-control">
            </div>
            <div class="mb-3 col-md-12 ml-5">
                <button class="btn btn-primary">Save Details</button>
            </div>
        </div>
    </div>
</form><hr>


<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="mb-3 col-md-12 text-center">
          <h3>Slider Images</h3>
        </div>
<hr>
<div class="table-wrapper" style="overflow-x: auto; -webkit-overflow-scrolling: touch;">

    <table class="table table-bordered table-stripped table-hover">
            <tr>
                <th style="width: 10%;" >Action</th>
                <th>Sr</th>
                <th>Images</th>
            </tr>
            <% for(var i=0;i<slider.length;i++) { %>
                <tr>
                    <td class="text-center ">
                        <button class="btn btn-danger" onclick="confirmDelete('<%-slider[i].top_slider_id%>')" aria-label="Delete enquiry">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                    <!-- <td>
                        <a href="delete_slider/<%-slider[i].top_slider_id%>" >
                            <button class="btn btn-danger" onclick="alert('Are You Sure....?')">Delete</button>
                        </a>
                    </td> -->
                    <td><%- i+1 %></td>
                    <td>
                        <img src="/uploads/<%-slider[i].slider_image%>" style="height: 100px;width: 200px;">
                    </td>

                </tr>
            <% } %>
        </table>
        <script>
            function confirmDelete(enquiryId) {
                // Display a confirmation dialog
                var result = confirm("Are you sure you ?");
                
                if (result) {
                    // If the user clicks "OK", redirect to the delete URL
                    window.location.href = 'delete_slider/' + enquiryId;
                } else {
                    // If the user clicks "Cancel", do nothing (dialog closes)
                    return false;
                }
            }
        </script>

    </div>
</div>










